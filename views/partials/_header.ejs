<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(typeof user !== 'undefined' && user){ %>
      <form action='/logout' method='POST'>
        <p class="d-inline text-white">Logged in as: <%= user.email %></p>
        &nbsp;
        <button type="submit" class="d-inline btn btn-secondary mb-2">logout</button>
      </form>
      <% } else{ %>
      <div class="btn-toolbar">
          <a class="button d-inline nav-item nav-link btn btn-secondary mb-2" href="/register">Register</a>
          &nbsp;
          &nbsp;
          <a class="button d-inline nav-item nav-link btn btn-secondary mb-2" href="/login">Login</a>
          <% } %>
      </div>
  </nav>
</header>

